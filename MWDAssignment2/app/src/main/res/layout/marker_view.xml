<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/MarkerImageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/MarkerNameView" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Event Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/MarkerNameView" app:layout_constraintStart_toStartOf="@+id/MarkerImageView"
            app:layout_constraintEnd_toEndOf="@+id/MarkerImageView" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/MarkerImageView"
            app:layout_constraintBottom_toTopOf="@+id/MarkerDescView" android:layout_marginBottom="32dp"/>
    <TextView
            android:text="Event Description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/MarkerDescView"
            app:layout_constraintEnd_toEndOf="@+id/MarkerNameView"
            app:layout_constraintStart_toStartOf="@+id/MarkerNameView" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MarkerNameView" android:layout_marginBottom="32dp"/>
</android.support.constraint.ConstraintLayout>